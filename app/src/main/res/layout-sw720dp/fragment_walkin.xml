<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/nav_header_height"
        android:layout_toLeftOf="@+id/walkin_layout_right">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_expandable"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#F1F2F7" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:background="#F1F2F7">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:background="@color/background"
                    android:gravity="center_vertical">

                    <com.tabyq.pos.tabqypos.customtext.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/fragment_walkin_all_categories"
                        android:textColor="@color/colorlightBlack"
                        android:text="All Categories"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:padding="@dimen/size_5"
                        android:drawableLeft="@drawable/ic_home"
                        android:drawableRight="@drawable/ic_down_arrow"
                        android:drawablePadding="@dimen/size_10"/>

                    <com.tabyq.pos.tabqypos.customtext.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorlightBlack"
                        android:text="Hot Drinks"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp" />

                    <com.tabyq.pos.tabqypos.customtext.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:text="Pizza"
                        android:gravity="center"
                        android:background="@drawable/btn_backgroundpink"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:layout_marginStart="10dp" />
                    <com.tabyq.pos.tabqypos.customtext.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:text="Dessert"
                        android:gravity="center"
                        android:background="@drawable/btn_backgroundpink"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:layout_marginStart="10dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <ExpandableListView
                        android:id="@+id/categories_list"
                        android:layout_width="100dp"
                        android:layout_height="40dp" />

                    <com.tabyq.pos.tabqypos.customtext.CustomTextView
                        android:id="@+id/group_cat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/categories_list"
                        android:text="Hot Drinks" />

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/group_cat"
                        android:scrollbars="horizontal"
                        android:visibility="gone" />
                </LinearLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_viewmain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/item_offset"
            tools:listitem="@layout/row_itemlistmain"
            android:scrollbars="horizontal"
            android:background="@color/background"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/walking_card_view_left_bottom"
            android:layout_margin="5dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <com.tabyq.pos.tabqypos.customtext.CustomTextButtonTextView
                        android:layout_width ="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/fragment_charge_txtOrderno"
                        android:text="@string/fragment_charge_txtOrderNo"/>
                    <com.tabyq.pos.tabqypos.customtext.CustomTextButtonTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:padding="10dp"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:layout_toRightOf="@+id/fragment_charge_txtOrderno"
                        android:id="@+id/fragment_charge_txtOrdernoValue"
                        android:text="#35489788"
                        tools:ignore="RtlHardcoded" />

                    <View
                        android:layout_below="@+id/fragment_charge_txtOrderno"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:id="@+id/top_view"
                        android:background="@color/colorLightGrey"/>


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <com.tabyq.pos.tabqypos.customtext.CustomTextView
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:padding="7dp"
                        android:textSize="@dimen/extra_small_size"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_charge_txtApplyCoupon"/>
                    <com.tabyq.pos.tabqypos.customtext.CustomEditText
                        android:layout_width="90dp"
                        android:layout_height="35dp"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/fragment_charge_edtApplyCoupon"
                        android:background="@drawable/edittext_bg"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.tabyq.pos.tabqypos.customtext.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="SAR 500"
                            android:textSize="@dimen/extra_small_size"
                            android:padding="5dp"
                            android:gravity="center"
                            android:textColor="@color/colorappPink"
                            android:id="@+id/fragment_charge_txtPointValue"/>
                        <View
                            android:layout_width="90dp"
                            android:layout_height="1dp"
                            android:background="@color/colorLightGrey"/>
                        <com.tabyq.pos.tabqypos.customtext.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2000 points "
                            android:textSize="@dimen/extra_small_size"
                            android:paddingTop="3dp"
                            android:gravity="center"
                            android:textColor="@color/colorBlack"
                            android:id="@+id/fragment_charge_txtPoint"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <com.tabyq.pos.tabqypos.customtext.CustomTextView
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/colorBlack"
                            android:padding="10dp"
                            android:textSize="@dimen/extra_small_size"
                            android:layout_height="wrap_content"
                            android:text="@string/fragment_charge_txtApplypoint"/>
                        <com.tabyq.pos.tabqypos.customtext.CustomTextView
                            android:layout_width="90dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:textSize="@dimen/extra_small_size"
                            android:textColor="@color/colorWhite"
                            android:text="@string/fragment_charge_txtApply"
                            android:id="@+id/fragment_charge_btnApplyPoint"
                            android:background="@drawable/btn_backgroundpink"/>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/colorLightGrey"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal">

                    <com.tabyq.pos.tabqypos.customtext.CustomTextButtonTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/extra_small_size"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="@string/fragment_charge_txtTotalAmt"/>

                    <com.tabyq.pos.tabqypos.customtext.CustomTextButtonTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SAR 2400.00"
                        android:id="@+id/fragment_charge_txtTotalAmt"
                        android:textStyle="bold"
                        android:textColor="@color/colorappPink"
                        android:padding="10dp"
                        android:textSize="@dimen/small_size"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/colorLightGrey"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/size_5">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/walkin_order_no_radio_group"
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:layout_toLeftOf="@+id/fragment_walkin_order_no_cancel">
                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/extra_small_size"
                            android:buttonTint="@color/colorappPink"
                            android:id="@+id/fragment_charge_RadioCash"
                            android:textColor="@color/colorBlack"
                            android:text="@string/fragment_charge_RadioCAsh"/>
                        <RadioButton
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textSize="@dimen/extra_small_size"
                            android:backgroundTint="@color/colorappPink"
                            android:textColor="@color/colorBlack"
                            android:id="@+id/fragment_charge_RadioCard"
                            android:text="@string/fragment_charge_RadioCard"/>
                        <RadioButton
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textSize="@dimen/extra_small_size"
                            android:backgroundTint="@color/colorappPink"
                            android:textColor="@color/colorBlack"
                            android:id="@+id/fragment_charge_RadioCardBoth"
                            android:text="@string/fragment_charge_RadioCard"/>

                    </RadioGroup>
                    <com.tabyq.pos.tabqypos.customtext.CustomTextView
                        android:layout_width="90dp"
                        android:layout_height="35dp"
                        android:id="@+id/fragment_walkin_order_no_cancel"
                        android:text="@string/fragment_charge_btnCancel"
                        android:background="@drawable/back_buttongrey"
                        android:textColor="@color/colorWhite"
                        android:padding="5dp"
                        android:textSize="@dimen/extra_small_size"
                        android:gravity="center"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/walking_card_view_left_bottom_pay_by_cash"
            android:layout_margin="5dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.tabyq.pos.tabqypos.customtext.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Pay by cash"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_20"
                    android:background="@color/colorWhite"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height=".3dp"
                    android:background="@color/background"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/walkin_pay_by_cash_right"
                        android:orientation="vertical"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp">

                        <com.tabyq.pos.tabqypos.customtext.CustomTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="SAR240.00"
                            android:textSize="14sp"
                            android:textColor="@color/colorappPink"/>
                        <com.tabyq.pos.tabqypos.customtext.CustomTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="300.00"
                            android:textSize="14sp"
                            android:layout_gravity="end"
                            android:textColor="@color/colorappPink"/>
                        <com.tabyq.pos.tabqypos.customtext.CustomTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="60.00"
                            android:textSize="14sp"
                            android:layout_gravity="right"
                            android:textColor="@color/colorappPink"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_toLeftOf="@+id/walkin_pay_by_cash_right"
                        android:layout_marginRight="15dp"
                        android:gravity="right">

                        <com.tabyq.pos.tabqypos.customtext.CustomTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Total Amount"
                            android:textSize="14sp"
                            android:textColor="@color/colorBlack"/>
                        <com.tabyq.pos.tabqypos.customtext.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Cash Received"
                            android:textSize="14sp"
                            android:textColor="@color/colorBlack"/>
                        <com.tabyq.pos.tabqypos.customtext.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Change Return"
                            android:textSize="14sp"
                            android:textColor="@color/colorBlack"/>

                    </LinearLayout>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height=".3dp"
                    android:background="@color/background"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">
                    <com.tabyq.pos.tabqypos.customtext.CustomTextView
                        android:layout_width="90dp"
                        android:layout_height="35dp"
                        android:id="@+id/walkin_pay_by_cash_btn_done"
                        android:gravity="center"
                        android:textSize="@dimen/extra_small_size"
                        android:textColor="@color/colorWhite"
                        android:text="Done"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/btn_backgroundpink"/>
                    <com.tabyq.pos.tabqypos.customtext.CustomTextView
                        android:layout_width="90dp"
                        android:layout_height="35dp"
                        android:id="@+id/walkin_pay_by_cash_btn_cancel"
                        android:layout_toLeftOf="@+id/walkin_pay_by_cash_btn_done"
                        android:text="@string/fragment_charge_btnCancel"
                        android:background="@drawable/back_buttongrey"
                        android:textColor="@color/colorWhite"
                        android:padding="5dp"
                        android:textSize="@dimen/extra_small_size"
                        android:gravity="center"
                        android:layout_marginRight="10dp"/>

                </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/main_frame_right_width"
        android:layout_height="match_parent"
        android:id="@+id/walkin_layout_right"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="@color/colorWhite">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/walkin_layout_right_top_walkin"
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:visibility="gone">

            <com.tabyq.pos.tabqypos.customtext.CustomTextView
                android:id="@+id/text_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/status_bar_customer"
                android:textSize="@dimen/size_10"
                android:textColor="@color/color_lightgreytext"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:gravity="center" >

                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:text="Online Order"
                    android:textSize="@dimen/size_10"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"/>
                <com.tabyq.pos.tabqypos.customtext.CustomTextViewBold
                    android:id="@+id/img_scan"
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/status_bar_scan"
                    android:textAllCaps="true"
                    android:textSize="@dimen/size_10"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:contentDescription="@string/nav_header_desc"
                    android:drawablePadding="@dimen/size_10"
                    android:drawableTop="@drawable/ic_qr_code" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/size_60"
                    android:background="@color/colorGrey"/>
                <com.tabyq.pos.tabqypos.customtext.CustomTextViewBold
                    android:id="@+id/img_search"
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/status_bar_search"
                    android:textAllCaps="true"
                    android:textSize="@dimen/size_10"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:drawablePadding="@dimen/size_10"
                    android:contentDescription="@string/nav_header_desc"
                    android:drawableTop="@drawable/ic_magnifying_glass" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/size_60"
                    android:background="@color/colorGrey"/>
                <com.tabyq.pos.tabqypos.customtext.CustomTextViewBold
                    android:id="@+id/img_adduser"
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/status_bar_add"
                    android:textAllCaps="true"
                    android:textSize="@dimen/size_10"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:drawablePadding="@dimen/size_10"
                    android:contentDescription="@string/nav_header_desc"
                    android:drawableTop="@drawable/ic_add_user" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/walkin_layout_right_top_crm"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:background="@color/background_3"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:visibility="gone">
            <ImageView
                android:id="@+id/include_charge_cust_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/nav_header_desc"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:paddingBottom="@dimen/nav_header_vertical_spacing"
                app:srcCompat="@drawable/profile_new" />

            <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.tabyq.pos.tabqypos.customtext.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marwin Simms"
                    android:padding="3dp"
                    android:textSize="@dimen/size_9"
                    android:textColor="@color/colorBlack"/>
                <com.tabyq.pos.tabqypos.customtext.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0454214552"
                    android:textSize="@dimen/size_9"
                    android:padding="3dp"
                    android:textColor="@color/colorlightBlack"/>
                <com.tabyq.pos.tabqypos.customtext.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance : 03:16"
                    android:padding="3dp"
                    android:textSize="@dimen/size_9"
                    android:textColor="@color/colorappPink"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom">
                <com.tabyq.pos.tabqypos.customtext.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_take_way"
                    android:textColor="@color/colorappPink"
                    android:padding="2dp"
                    android:textSize="@dimen/size_9"
                    android:layout_alignParentRight="true"
                    android:gravity="right|center_vertical"
                    android:layout_marginLeft="3dp"
                    android:text="@string/fragment_charge_txt_take_way"/>

            </RelativeLayout>

        </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/deletetop"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:padding="15dp"
                android:background="@color/background_2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/fragment_new_order_delete"
                    android:src="@drawable/ic_delete_button"
                    android:layout_marginStart="10dp" />

                <com.tabyq.pos.tabqypos.customtext.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:text="Items(2)" />

                <ImageView
                    android:id="@+id/imgdot_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_dot"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>
            <LinearLayout
                android:id="@+id/itemmainherader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deletetop"
                android:background="@color/background_3"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:src="@drawable/ic_forward"
                    android:visibility="invisible" />

                <com.tabyq.pos.tabqypos.customtext.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/extra_small_size"
                    android:layout_weight="1"
                    android:text="Items name" />

                <com.tabyq.pos.tabqypos.customtext.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/extra_small_size"
                    android:layout_weight=".5"
                    android:text="Qty" />

                <com.tabyq.pos.tabqypos.customtext.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/extra_small_size"
                    android:layout_weight="1"
                    android:text="@string/fragment_crm_price" />

                <com.tabyq.pos.tabqypos.customtext.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/extra_small_size"
                    android:layout_weight="1"
                    android:text="@string/fragment_crm_subtotal" />

            </LinearLayout>
            <TextView
                android:id="@+id/textEmptyList"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="List is Empty!"
                tools:visibility="gone" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/walkin_right_bottom"
                android:orientation="vertical"
                android:background="@color/background_3"
                android:layout_alignParentBottom="true">

                <View
                    android:layout_width="match_parent"
                    android:layout_height=".3dp"
                    android:background="#ECF0F1" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.tabyq.pos.tabqypos.customtext.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:padding="10dp"
                        android:text="@string/fragment_charge_txtsubtotal"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="@dimen/extra_small_size" />

                    <com.tabyq.pos.tabqypos.customtext.CustomTextView
                        android:id="@+id/walkin_sub_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="12.00"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="@dimen/extra_small_size" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <com.tabyq.pos.tabqypos.customtext.CustomTextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:textSize="@dimen/extra_small_size"
                        android:text="@string/fragment_charge_txttax"
                        android:textColor="@color/colorDarkGrey" />
                    <com.tabyq.pos.tabqypos.customtext.CustomTextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/extra_small_size"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="40.00"
                        android:textColor="@color/colorDarkGrey" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <com.tabyq.pos.tabqypos.customtext.CustomTextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:textSize="@dimen/small_size"
                        android:textStyle="bold"
                        android:text="@string/fragment_charge_txttotal"
                        android:textColor="@color/colorBlack" />
                    <com.tabyq.pos.tabqypos.customtext.CustomTextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/walkin_total"
                        android:gravity="right"
                        android:textSize="@dimen/small_size"
                        android:textStyle="bold"
                        android:text="SAR 52.00"
                        android:textColor="@color/colorBlack" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/bottom_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50">

                    <com.tabyq.pos.tabqypos.customtext.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="#BB0162"
                        android:gravity="center"
                        android:text="@string/save"
                        android:textSize="@dimen/small_size"
                        android:id="@+id/fragment_new_order_txtSave"
                        android:textColor="#fff" />

                    <com.tabyq.pos.tabqypos.customtext.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="#A60054"
                        android:gravity="center"
                        android:textSize="@dimen/small_size"
                        android:id="@+id/fragment_new_order_txtCharge"
                        android:text="@string/charge_btn"
                        android:textColor="#fff" />

                </LinearLayout>

            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/dragged_items"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/itemmainherader"
                android:layout_above="@+id/walkin_right_bottom"
                android:background="@color/background_3"
                android:scrollbars="none"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>