<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.nav2.CloseRegister"
    android:layout_marginTop="@dimen/nav_header_height"
    android:padding="10dp"
    android:background="@color/background">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_background_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="15dp">

            <com.example.ask.tabqypos.customtext.CustomTextView
                android:layout_width="500dp"
                android:layout_height="45dp"
                android:text="Customer Name"
                android:textSize="12sp"
                android:textColor="@color/colorBlack"
                android:gravity="center_vertical"
                android:background="@drawable/shape_border_grey"
                android:paddingLeft="15dp"
                android:layout_marginRight="10dp"/>
            <com.example.ask.tabqypos.customtext.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="Search"
                android:textSize="12sp"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_search"
                android:drawablePadding="15dp"
                android:background="@drawable/btn_backgroundpink"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_customer_recycler" />

    </LinearLayout>

</LinearLayout>