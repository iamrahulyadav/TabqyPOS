<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".fragments.nav1.OrderStatusFragment"
    android:layout_marginTop="@dimen/nav_header_height"
    android:padding="@dimen/size_10">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.example.ask.tabqypos.customtext.CustomTextView
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="Table Order"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/btn_backgroundpink"
            android:drawableRight="@drawable/ic_table_white"
            android:drawablePadding="@dimen/size_20"
            android:layout_marginLeft="15dp"/>
        <com.example.ask.tabqypos.customtext.CustomTextView
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="Take Way Order"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/btn_backgroundpink"
            android:drawableRight="@drawable/ic_shopping_bag"
            android:drawablePadding="@dimen/size_20"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"/>
        <com.example.ask.tabqypos.customtext.CustomTextView
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="Online Order"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/btn_backgroundpink"
            android:drawableRight="@drawable/ic_at"
            android:drawablePadding="@dimen/size_20"
            android:layout_marginRight="15dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_10"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/order_status_recycler_1"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/order_status_recycler_2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/order_status_recycler_3"/>

    </LinearLayout>

</LinearLayout>