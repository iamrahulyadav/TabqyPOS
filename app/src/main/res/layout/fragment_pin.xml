<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="260dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/logo" />

            <LinearLayout
                android:id="@+id/number_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:orientation="vertical">


                <com.example.ask.tabqypos.customtext.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/fragment_pin_enter_the_pin_of_manager_or_administrator"
                    android:textSize="@dimen/extra_small_size" />


                <LinearLayout
                    android:layout_width="600dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorLightGrey"
                    android:orientation="vertical"
                    android:padding="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="1dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <com.example.ask.tabqypos.customtext.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:gravity="center"
                                android:text="@string/fragment_pin_1" />

                            <com.example.ask.tabqypos.customtext.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="1dp"
                                android:layout_marginRight="1dp"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:gravity="center"
                                android:text="@string/fragment_pin_2" />

                            <com.example.ask.tabqypos.customtext.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:gravity="center"
                                android:text="@string/fragment_pin_3" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="1dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <com.example.ask.tabqypos.customtext.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:gravity="center"
                                android:text="@string/fragment_pin_4" />

                            <com.example.ask.tabqypos.customtext.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="1dp"
                                android:layout_marginRight="1dp"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:gravity="center"
                                android:text="@string/fragment_pin_5" />

                            <com.example.ask.tabqypos.customtext.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:gravity="center"
                                android:text="@string/fragment_pin_6" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="1dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <com.example.ask.tabqypos.customtext.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:gravity="center"
                                android:text="@string/fragment_pin_7" />

                            <com.example.ask.tabqypos.customtext.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="1dp"
                                android:layout_marginRight="1dp"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:gravity="center"
                                android:text="@string/fragment_pin_8" />

                            <com.example.ask.tabqypos.customtext.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:gravity="center"
                                android:text="@string/fragment_pin_9" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="1dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <com.example.ask.tabqypos.customtext.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:gravity="center"
                                android:textColor="@color/colorBlack" />

                            <com.example.ask.tabqypos.customtext.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="1dp"
                                android:layout_marginRight="1dp"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:gravity="center"
                                android:text= "@string/fragment_pin_0" />

                            <com.example.ask.tabqypos.customtext.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:gravity="center"
                                android:text="@string/fragment_pin_clear" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_okay"
                android:layout_marginTop="@dimen/margin_button_top_pin"
                android:layout_width="wrap_content"
                android:paddingLeft="260dp"
                android:paddingRight="260dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/number_buttons"
                android:layout_centerHorizontal="true"
                android:background="@drawable/back_buttongrey"
                android:text="@string/txtOk"
                android:layout_marginBottom="50dp"
                android:textColor="@color/colorWhite" />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>