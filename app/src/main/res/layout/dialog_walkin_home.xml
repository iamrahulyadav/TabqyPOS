<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/size_20"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_border_grey_pop_up">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/talabat"/>

            <com.tabyq.pos.tabqypos.customtext.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Talabat"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/size_10"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/x"/>

            <com.tabyq.pos.tabqypos.customtext.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zomato"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/size_10"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/panda"/>

            <com.tabyq.pos.tabqypos.customtext.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foodpanda"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/size_10"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/size_20"
        android:layout_marginLeft="@dimen/size_20">

        <com.tabyq.pos.tabqypos.customtext.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Order No. : "
            android:background="@android:color/transparent"/>
        <com.tabyq.pos.tabqypos.customtext.CustomEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingLeft="15dp"
            android:singleLine="true"/>

    </LinearLayout>
    <com.tabyq.pos.tabqypos.customtext.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_50"
        android:id="@+id/dialog_walkin_home_submit"
        android:text="Submit"
        android:gravity="center"
        android:layout_margin="20dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/btn_backgroundpink"
        android:layout_gravity="center"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"/>

</LinearLayout>