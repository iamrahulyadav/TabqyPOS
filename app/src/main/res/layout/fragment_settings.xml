<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.nav2.CloseRegister"
    android:layout_marginTop="@dimen/nav_header_height"
    android:padding="10dp"
    android:background="@color/background">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_background_white"
        android:padding="@dimen/size_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/fragment_settings_layout_bottom"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.example.ask.tabqypos.customtext.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="abc@gmail.com"
                    android:textSize="@dimen/size_10"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"/>

                <com.example.ask.tabqypos.customtext.CustomTextView
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:id="@+id/fragment_settings_tv_exit"
                    android:text="EXIT"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_14"
                    android:gravity="center"
                    android:background="@drawable/shape_background_grey"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/fragment_settings_layout_plus"
                android:gravity="center"
                android:background="@drawable/shape_background_pink_circle"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add"/>
            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/fragment_settings_layout_bottom"
            android:layout_marginBottom="10dp">

            <com.example.ask.tabqypos.customtext.CustomTextView
                android:layout_width="180dp"
                android:layout_height="55dp"
                android:text="Printers"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/size_12"
                android:gravity="center_vertical"
                android:background="@drawable/btn_backgroundpink"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/ic_printer_"
                android:drawablePadding="10dp"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_settings_recycler"
                android:layout_marginLeft="10dp" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>