<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/item_customer_layout"
        android:paddingLeft="15dp"
        android:paddingRight="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true">

            <ImageView
                android:layout_width="@dimen/size_60"
                android:layout_height="@dimen/size_60"
                android:src="@drawable/profile_new"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/size_10">

                <com.example.ask.tabqypos.customtext.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nobita"
                    android:textSize="@dimen/size_12"
                    android:textColor="@color/colorBlack"/>
                <com.example.ask.tabqypos.customtext.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Picasso@gmail.com"
                    android:textSize="@dimen/size_12"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="5dp"/>
                <com.example.ask.tabqypos.customtext.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+91-7737284476"
                    android:textSize="@dimen/size_12"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true">

            <com.example.ask.tabqypos.customtext.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/size_12"
                android:background="@drawable/shape_background_pink"
                android:paddingTop="@dimen/size_5"
                android:paddingBottom="@dimen/size_5"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_marginRight="@dimen/size_10"/>
            <com.example.ask.tabqypos.customtext.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/size_12"
                android:background="@drawable/shape_background_orange_1"
                android:paddingTop="@dimen/size_5"
                android:paddingBottom="@dimen/size_5"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>